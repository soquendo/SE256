@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.FName</h1>

    <table class="table table-bordered table-sm table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ticket Title</th>
                <th>Category</th>
                <th>Submitted By</th>
                <th>Reported Ob</th>
                <th>Active</th>
                <th>DOTS Contact</th>
                <th>Response</th>
            </tr>
        </thead>

        <tbody>
            @if (Model == null)
            {
                <tr>
                    <td colspan="7" class="text-center">No Model</td>
                </tr>
            }
            else
            {
                @foreach (var p in Model.tix)
                {
                    <tr>
                        <td>@p.Ticket_ID</td>
                        <td>@p.Ticket_Title</td>
                        <td>@p.Category</td>
                        <td>@p.Reporting_Email</td>
                        <td>@p.Orig_Date</td>

                        @{ 
                            if (p.Active == true)
                            {
                                <td>Active</td>
                            }
                            else
                            {
                                <td>Closed</td>
                            }
                        }

                        <td>@p.Responder_Email</td>
                        <td style="width:100%;">@p.Responder_Notes</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
